@startuml
!pragma useVerticalIf on

title Lihat Statistik Harga Ayam per Wilayah

|Admin|
start
:Membuka Halaman Login;

|System|
:Menampilkan Login Form;

|Admin|
:Mengisikan Username & Password;
:Klik Tombol Login;

|System|
if (Validasi Login Valid?) then (Tidak)
    |Admin|
    :Tampilkan Notifikasi\n"Login gagal";
    kill
else (Ya)
    |System|
    :Tampilkan Dashboard Admin;
endif

|Admin|
:Buka Menu Statistik;

|System|
:Tampilkan Pilihan Wilayah;

|Admin|
:Pilih Wilayah;

|System|
if (Wilayah tersedia?) then (Tidak)
    |Admin|
    :Tampilkan Notifikasi\n"Data wilayah \ntidak ditemukan";
    kill
else (Ya)
    |System|
    :Tampilkan Grafik Harga;
    |Admin|
    :Visualisasi grafik harga;
    stop
endif

@enduml
